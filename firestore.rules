
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Loan Applications: Anyone can create, only admins can read/update/delete
    match /loanApplication/{applicationId} {
      allow read, update, delete: if request.auth != null;
      allow create: if true;
    }

    // WhatsApp Contacts: Public can read, only admins can write
    match /whatsappContacts/{contactId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
